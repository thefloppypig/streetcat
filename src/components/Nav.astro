---
import NavLink from "./NavLink.astro";
---

<nav class="nav">
    <a href={"/"}
        ><img
            class="navicon"
            src="icon-128.webp"
            alt="Home"
            height={40}
            width={40}
        /></a
    >
    <NavLink to={"/list"} label="Feeder List" />
    <NavLink to={"/tools"} label="Tools" />
    <NavLink to={"/happycanteen"} label="Happy Canteen" />
    <NavLink to={"/lucky711-ii"} label="Lucky 7-11 â…¡" />
    <NavLink to={"/auspiciousrestaurant"} label="Auspicious Restaurant" />
    <NavLink to={"/catmojo"} label="CatMojo" />
</nav>
<script>
    const buttons = document.querySelectorAll(
        ".navlink",
    ) as NodeListOf<HTMLElement>;
    const resize = () => {
        buttons.forEach((r) => {
            const rect = r.getBoundingClientRect();
            r.style.visibility =
                rect.right > window.innerWidth ? "hidden" : "visible";
        });
    };
    resize();
    window.addEventListener("resize", resize);
</script>
